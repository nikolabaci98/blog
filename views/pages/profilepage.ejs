<!DOCTYPE html>
<html class="middle-half">
    <%- include('../components/head.ejs') %>
    <body>
        <%- include('../components/navbar.ejs') %>
        <div class="profile-info">
            <h2><%= user.name %></h2>
            <h5>Email: <%= user.username %></h5>
            <h5>Posts: <%= blogPosts.length %></h5>
        </div>
       

        
        <% for(let i = blogPosts.length-1; i >= 0; i--) { %>
            <% let post = blogPosts[i]; %>
            <div class="card border-light">
                <div class="card-body">
                  <h4 class="card-title"><%= post.title %></h4>
                  <span class="small"><%= post.time %></span>
                  <pre class="card-text"><%= post.text.substring(0, 90) + "..." %> <a href="/blog/<%= post.id %>">more</a></pre>
                  <span><i><%= post.name %> -- <%= post.createdAt.toLocaleDateString() %></i></span>
                </div>
                <div class="trash-can-container">
                    <a href="/delete/<%= post.id %>">
                        <i class="fa-solid fa-trash-can trash-can-container"></i>
                    </a>
                </div>
                <% if(i > 0) { %>
                  <hr>
                <% } %>
            </div>
        <% } %>
    </body>
    <%- include('../components/footer.ejs') %>
</html>