
<form method="POST" action="/submit" id="composeForm">
    <div class="mb-3">
        <label for="authorName" class="form-label">
            Author:
        </label>
        <input type="text" class="form-control" name="authorName" id="authorName" placeholder="Mark Twin">
    </div>
    <div class="mb-3">
        <label for="blogPost" class="form-label">Your blog in markdown:</label>
        <textarea class="form-control" name="blogPost" id="blogPost" rows="15"></textarea>
    </div>
    <button id="submitForm" type="submit" class="btn btn-primary">Submit</button>
</form>
<script src="javascripts/validation.js" type="text/javascript"></script>
